<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eleven.mapper.LoginUserMapper">

    <select id="queryAllAccount" resultType="java.lang.String">
        select
            account
        from im_user
    </select>
    <select id="selectUser" resultType="com.eleven.entity.LoginUser">
        select
            *
        from im_user
        where account = #{username}
        or phone = #{username}
        or email = #{username}
    </select>
    <select id="queryUserByAccount" resultType="com.eleven.entity.LoginUser">
        select
            *
        from im_user
        where account = #{account}
    </select>
</mapper>
